<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Cadastre_ORM_20_WPF_Tests.Views.Style.ControlElement">
    <Style x:Key="LabelBase" TargetType="Label">
        <Setter Property="FontFamily" Value="{DynamicResource BaseFontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource MenuFontSize}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="MinHeight" Value="20" />
        <Setter Property="Margin" Value="2" />
    </Style>

    <Style
        x:Key="LabelLeft"
        BasedOn="{StaticResource LabelBase}"
        TargetType="Label">
        <Setter Property="HorizontalContentAlignment" Value="Left" />
    </Style>
</ResourceDictionary>