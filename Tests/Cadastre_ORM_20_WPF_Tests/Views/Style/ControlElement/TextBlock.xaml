<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Cadastre_ORM_20_WPF_Tests.Views.Style.ControlElement">
    <Style x:Key="BaseTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource BaseFontFamily}" />
    </Style>
    <Style
        x:Key="NormalTextBlock"
        BasedOn="{StaticResource BaseTextBlock}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="{DynamicResource NormalFontSize}" />
    </Style>
    <Style
        x:Key="TitleTextBlock"
        BasedOn="{StaticResource BaseTextBlock}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="{DynamicResource TitleFontSize}" />
        <Setter Property="FontStyle" Value="Italic" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
</ResourceDictionary>