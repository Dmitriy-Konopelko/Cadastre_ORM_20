<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BaseWindows" TargetType="Window">
        <Setter Property="MinHeight" Value="600" />
        <Setter Property="Width" Value="800" />
        <Setter Property="MaxHeight" Value="1000" />
        <Setter Property="MinWidth" Value="1000" />
        <Setter Property="Width" Value="900" />
        <Setter Property="MaxWidth" Value="1280" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="FontFamily" Value="{StaticResource BaseFontFamily}" />
        <!--<Setter Property="FontSize" Value="{StaticResource MenuFontSize}" />-->
    </Style>

</ResourceDictionary>